<odoo>
  <data>
    <!-- rep.diario.cyc action window -->
    <record id="rep_diario_cyc_action" model="ir.actions.act_window">
      <field name="name">Sábana diara acumulada</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">rep.diario.cyc</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Sábana diara acumulada</p>
        <p>Presiona "Crear" para agregar un nuevo diario</p>
      </field>
    </record>

    <!-- rep.diario.cyc tree view -->
    <record id="rep_diario_cyc_view_tree" model="ir.ui.view">
      <field name="name">Sábana diara acumulada</field>
      <field name="model">rep.diario.cyc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha_inicio"/>
          <field name="fecha_final"/>
        </tree>
      </field>
    </record>

    <!-- rep.diario.cyc form view -->
    <record id="rep_diario_cyc_view_form" model="ir.ui.view">
      <field name="name">rep.diario.cyc.view.form</field>
      <field name="model">rep.diario.cyc</field>
      <field name="arch" type="xml">
        <form string="form">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" readonly="1" />
              </h1>
            </div>
            <group>
              <field name="fecha_inicio"/>
              <field name="fecha_final"/>
            </group>
            <field name="linea_diario_ids" readonly="1" force_save="1">
              <tree>
                <field name="date"/>
                <field name="saldo_inicial"/>
                <field name="credito_otorgado"/>
                <field name="descuentos"/>
                <field name="cobranza"/>
                <field name="subtotal"/>
                <field name="nota_cargo"/>
                <field name="cobranza_nota_cargo"/>
                <field name="cobranza_anticipada"/>
                <field name="ajuste_fuera_periodo"/>
                <field name="saldo_final"/>
              </tree>
            </field>
          </sheet>
        </form>
      </field>
    </record>


